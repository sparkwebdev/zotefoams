{
  "name": "underscores",
  "version": "1.0.0",
  "type": "module",
  "description": "Hi. I'm a starter theme called _s, or underscores, if you like. I'm a theme meant for hacking so don't use me as a Parent Theme. Instead try turning me into the next, most awesome, WordPress theme out there. That's what I'm here for.",
  "author": "Automattic Theme Team",
  "license": "GPL-2.0-or-later",
  "keywords": [
    "WordPress",
    "Theme"
  ],
  "homepage": "https://github.com/Automattic/_s#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Automattic/_s.git"
  },
  "bugs": {
    "url": "https://github.com/Automattic/_s/issues"
  },
  "devDependencies": {
    "@playwright/test": "^1.51.1",
    "@types/node": "^22.13.13",
    "browser-sync": "^3.0.4",
    "concat-cli": "^4.0.0",
    "concurrently": "^9.1.2",
    "dir-archiver": "^1.1.1",
    "node-sass": "^7.0.3",
    "open": "^10.1.2",
    "rtlcss": "^3.5.0",
    "stylelint-config-prettier": "^9.0.5"
  },
  "rtlcssConfig": {
    "options": {
      "autoRename": false,
      "autoRenameStrict": false,
      "blacklist": {},
      "clean": true,
      "greedy": false,
      "processUrls": false,
      "stringMap": []
    },
    "plugins": [],
    "map": false
  },
  "scripts": {
    "lint:scss": "wp-scripts lint-style 'sass/**/*.scss'",
    "lint:js": "wp-scripts lint-js 'js/*.js'",
    "sass:watch": "node-sass sass/ -o ./ --source-map true --output-style expanded --indent-type tab --indent-width 1 -w",
    "js:watch": "watch 'npm run js:bundle' js/*.js",
    "js:bundle": "concat -o js/bundle.js js/*.js",
    "serve": "browser-sync start --proxy 'https://zotefoams-phase-2.local/' --https --files './style.css, js/bundle.js, ./**/*.php'",
    "watch:live": "concurrently \"npm run sass:watch\" \"npm run js:watch\" \"npm run serve\"",
    "compile:css": "node-sass sass/ -o ./ && stylelint '*.css' --fix || true",
    "compile:rtl": "rtlcss style.css style-rtl.css",
    "build": "npm run compile:css && npm run js:bundle && npm run compile:rtl",
    "bundle": "dir-archiver --src . --dest ../_s.zip --exclude .DS_Store .stylelintrc.json .eslintrc .git .gitattributes .github .gitignore README.md composer.json composer.lock node_modules vendor package-lock.json package.json .travis.yml phpcs.xml.dist sass style.css.map yarn.lock",
    "test:compare": "playwright test tests/vrc/compare-pages-2.spec.js"
  },
  "dependencies": {
    "node-fetch": "^3.3.2",
    "pixelmatch": "^7.1.0",
    "pngjs": "^7.0.0",
    "sharp": "^0.34.1",
    "xml2js": "^0.6.2"
  }
}
