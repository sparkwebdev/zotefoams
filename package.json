{
  "name": "underscores",
  "version": "1.0.0",
  "type": "module",
  "description": "Hi. I'm a starter theme called _s, or underscores, if you like. I'm a theme meant for hacking so don't use me as a Parent Theme. Instead try turning me into the next, most awesome, WordPress theme out there. That's what I'm here for.",
  "author": "Automattic Theme Team",
  "license": "GPL-2.0-or-later",
  "keywords": [
    "WordPress",
    "Theme"
  ],
  "homepage": "https://github.com/Automattic/_s#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Automattic/_s.git"
  },
  "bugs": {
    "url": "https://github.com/Automattic/_s/issues"
  },
  "devDependencies": {
    "@parcel/transformer-sass": "^2.13.3",
    "@playwright/test": "^1.51.1",
    "@types/node": "^22.13.13",
    "@wordpress/scripts": "^19.2.2",
    "browser-sync": "^3.0.3",
    "dir-archiver": "^1.1.1",
    "node-sass": "^7.0.1",
    "open": "^10.1.2",
    "rtlcss": "^3.5.0"
  },
  "rtlcssConfig": {
    "options": {
      "autoRename": false,
      "autoRenameStrict": false,
      "blacklist": {},
      "clean": true,
      "greedy": false,
      "processUrls": false,
      "stringMap": []
    },
    "plugins": [],
    "map": false
  },
  "scripts": {
    "dev": "parcel watch css/sp.scss --dist-dir css --no-content-hash --no-source-maps & npm run browsersync",
    "browsersync": "browser-sync start --proxy 'https://zotefoamslive.local' --files 'css/sp.css'",
    "build": "parcel build css/sp.scss --dist-dir css",
    "lint:scss": "wp-scripts lint-style 'css/**/*.scss'",
    "watch": "node-sass sass/ -o ./ --source-map true --output-style expanded --indent-type tab --indent-width 1 -w",
    "compile:css": "node-sass sass/ -o ./ && stylelint '*.css' --fix || true && stylelint '*.css' --fix",
    "compile:rtl": "rtlcss style.css style-rtl.css",
    "lint:js": "wp-scripts lint-js 'js/*.js'",
    "bundle": "dir-archiver --src . --dest ../_s.zip --exclude .DS_Store .stylelintrc.json .eslintrc .git .gitattributes .github .gitignore README.md composer.json composer.lock node_modules vendor package-lock.json package.json .travis.yml phpcs.xml.dist sass style.css.map yarn.lock",
    "test:compare": "playwright test tests/vrc/compare-pages-2.spec.js"
  },
  "dependencies": {
    "node-fetch": "^3.3.2",
    "parcel": "^2.13.3",
    "pixelmatch": "^7.1.0",
    "pngjs": "^7.0.0",
    "sass": "^1.85.0",
    "sharp": "^0.34.1",
    "xml2js": "^0.6.2"
  }
}
